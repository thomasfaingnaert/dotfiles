# View odd pages on the left hand side in side-by-side mode
set first-page-column 1:1

# Zoom mappings
map <C-0> zoom default

map + zoom in
map <C-+> zoom in
map = zoom in
map <C-=> zoom in

map - zoom out
map <C--> zoom out

# Adjust page width
map f adjust_window best-fit
map w adjust_window width

# Start Zathura maximised
set window-height 3000
set window-width 3000

# Use o/O instead of f/F for links
map o follow
map O display_link
