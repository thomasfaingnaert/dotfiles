[user]
	name = Thomas Faingnaert
	useConfigOnly = true
[merge]
	tool = gvimdiff
[mergetool]
	prompt = false
[diff]
	tool = gvimdiff
[difftool]
	prompt = false
[alias]
	a = add
	aa = add --all
	br = branch
	ci = commit
	cia = commit --amend
	co = checkout
	d = diff
	dc = diff --cached
	fa = fetch --all
	hotmail = config user.email thomas.faingnaert@hotmail.com
	l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(dim white)%an%C(reset) %C(bold green)(%ar)%C(reset) - %C(white)%s%C(reset) %C(bold yellow)%d%C(reset)'
	m = merge
	pl = pull
	ps = push
	psu = push --set-upstream origin HEAD
	st = status
	ugent = config user.email thomas.faingnaert@ugent.be
	wc = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(dim white)%an%C(reset) %C(bold green)(%ar)%C(reset) - %C(white)%s%C(reset) %C(bold yellow)%d%C(reset)' --patch --perl-regexp --author='^((?!Thomas Faingnaert|tfaingna).*)$'
	wn = !"wn() { git l $1@{1}..$1@{0} \"$@\"; }; wn"
[core]
	excludesfile = ~/.gitignore_global
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
